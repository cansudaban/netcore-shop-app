@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Role List</h1>
        <hr />
        <a class="btn btn-primary btn-lg my-4" href="/admin/role/create">Create Role</a>
        @if (Model.Count() > 0)
        {

        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <td style="width:400px;">Id</td>
                    <td style="width:150px;">Role Name</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <form action="/admin/role/delete" method="POST" class="d-inline">
                                <input type="hidden" name="RoleId" value="@item.Id" />
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                        <td></td>
                    </tr>                
                }
            </tbody>
        </table> 
        }else {
        <div class="alert alert-warning">
            <h3>No Roles</h3>
        </div>
        }
    </div>
</div>