@model ProductDetailModel

<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.Product.ImageUrl" class="img-fluid" alt="@Model.Product.Name" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">@Model.Product.Name</h1><hr />
        @foreach (var item in Model.Categories)
        {
            <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
        }
        <div class="mb-3">
            <h4 class="text-primary mb-3">@Model.Product.Price <i class="fas fa-lira-sign"></i></h4>

            <form asp-controller="Cart" asp-action="AddToCart" method="POST">
                <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                <div class="input-group mb-3">
                    <input type="number" name="quantity" value="1" class="form-control float-start" min="1" step="1" style="width:100px !important;" />
                    <button type="submit" class="btn btn-primary"><i class="fas fa-cart-plus"></i> Add To Cart</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>
